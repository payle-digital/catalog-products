generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Product {
  id String @id
  object String @default("product")
  active Boolean @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  description String?
  images String[]
  features String[]
  livemode Boolean
  name String
  updatedAt DateTime @updatedAt @map("updated_at")

  prices Price[]

  storeId String @map("store_id")
  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@index([storeId])
  @@map("products")
}

model Price {
  id String @id
  object String @default("price")
  active Boolean @default(true)
  billingScheme BillingScheme @map("billing_scheme")
  createdAt DateTime @default(now()) @map("created_at")
  currency Currency
  type PriceType
  unitAmount Int? @map("unit_amount")
  recurring Json?

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String @map("product_id")

  storeId String @map("store_id")
  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@index([productId, storeId])
  @@index([storeId])
  @@index([productId])
  @@map("prices")
}

enum BillingScheme {
  per_unit
}

enum PriceType {
  one_time
  recurring
}

enum Currency {
  USD
  BRL
  EUR
}

model Store {
  id String @id

  apiKeys ApiKey[]
  product Product[]
  price Price[]

  @@map("stores")
}

model ApiKey {
  id String @id
  key String @unique
  environment environmentKey
  expireAt DateTime

  storeId String @map("store_id")
  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@index([storeId])
  @@map("api_keys")
}

enum environmentKey {
  live
  test
}